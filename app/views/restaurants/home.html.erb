<div class="container fill" style="height: 100%; margin-top: 70px;">
  <div class="card-container">
    <% @restaurants.each do |restaurant| %>
      <div class="card" style="width: 18rem; margin: 10px;">
        <img class="card-img-top" src="https://cdn2.lamag.com/wp-content/uploads/sites/6/2019/02/JVB_exterior_JoshuaWhite-1068x854.jpg" alt="">
        <div class="card-body d-flex align-items-end justify-content-between">
          <h5 class="card-title"><%= restaurant.name %></h5>
          <a href="/restaurants/<%= restaurant.id %>" class="btn btn-primary .btn-sm">
            More</a>
        </div>
      </div>
    <% end %>
  </div>
</div>
